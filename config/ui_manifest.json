  "layout": {
    "iconRow": {
      "position": "bottom",
      "heightPercent": 30,
      "iconSizePx": 160,
      "iconSize4kPx": 320,
      "gapPx": 32,
      "cornerRadiusPx": 16
    }
  },
  "icons": [
    {
      "id": "netflix",
      "type": "app",
      "label": "Netflix",
      "iconPath": "/icons/netflix.png",
      "action": "launch",
      "order": 1
    },
    {
      "id": "prime",
      "type": "app",
      "label": "Prime Video",
      "iconPath": "/icons/prime.png",
      "action": "launch",
      "order": 2
    },
    {
      "id": "hulu",
      "type": "app",
      "label": "Hulu",
      "iconPath": "/icons/hulu.png",
      "action": "launch",
      "order": 3
    },
    {
      "id": "disney",
      "type": "app",
      "label": "Disney+",
      "iconPath": "/icons/disney.png",
      "action": "launch",
      "order": 4
    },
    {
      "id": "youtube",
      "type": "app",
      "label": "YouTube",
      "iconPath": "/icons/youtube.png",
      "action": "launch",
      "order": 5
    },
    {
      "id": "settings",
      "type": "system",
      "label": "Settings",
      "iconPath": "/icons/settings.png",
      "action": "open_settings",
      "order": 6
    }

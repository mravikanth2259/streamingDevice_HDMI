  "systemIcons": [
    {
      "id": "wifi",
      "type": "status",
      "label": "Wi-Fi",
      "iconPath": "/icons/wifi.png",
      "iconPathOffline": "/icons/wifi_off.png",
      "tooltipKey": "wifi_status"
    },
    {
      "id": "bluetooth",
      "type": "status",
      "label": "Bluetooth",
      "iconPath": "/icons/bluetooth.png",
      "iconPathOffline": "/icons/bluetooth_off.png",
      "tooltipKey": "bluetooth_status"
    }
  ],
  "settings": {
    "items": [
      { "id": "network", "label": "Network (Wi-Fi)" },
      { "id": "bluetooth", "label": "Bluetooth" },
      { "id": "display", "label": "Display" },
      { "id": "accessibility", "label": "Accessibility" },
      { "id": "about", "label": "About" }
    ],
    "accessibility": [
      { "id": "high_contrast", "label": "High contrast", "type": "boolean" },
      { "id": "reduce_motion", "label": "Reduce motion", "type": "boolean" }
    ]
  },
  "animations": {
    "focusTransitionMs": 150,
    "scrollTransitionMs": 200,
    "enterExitMs": 200
